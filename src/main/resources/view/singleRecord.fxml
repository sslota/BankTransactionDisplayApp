<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pl.edu.agh.to.bankTransactionsUI.view.SingleRecordController"
            prefHeight="400.0" prefWidth="800.0">

    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="800.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>

        <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Account Number:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="accountNumberField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Correspondent:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="correspondentField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="dateField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Transaction Type:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label fx:id="transactionTypeField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Amount:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <Label fx:id="amountField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Description:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <Label fx:id="descriptionField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="Tags:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <Label fx:id="tagsField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <Label text="Update Tags:" GridPane.rowIndex="11" GridPane.columnIndex="0"/>

        <CheckBox fx:id="checkbox1" text="checkbox1" GridPane.rowIndex="10" GridPane.columnIndex="1"/>
        <CheckBox fx:id="checkbox2" text="checkbox2" GridPane.rowIndex="11" GridPane.columnIndex="1"/>
        <CheckBox fx:id="checkbox3" text="checkbox3" GridPane.rowIndex="12" GridPane.columnIndex="1"/>

        <Button fx:id="saveAndClose" text="Save and Close" onAction="#saveAndClose" GridPane.rowIndex="14" GridPane.columnIndex="0"/>

    </GridPane>
</AnchorPane>